{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "next/core-web-vitals"
    ],
    "settings": {
        "import/resolver": {
          "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
        }
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-props-no-spreading": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "no-use-before-define": "warn"
    }
}
